{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017", "ESNext"],
    "sourceMap": true,
    "allowJs": false,
    "declaration": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "paths": {
      "@nanobits/react-ui": ["./packages/react-ui/src"],
      "@nanobits/react-ui/*": ["./packages/react-ui/src/*"],
      "@nanobits/react-components": ["./packages/react-components/src"],
      "@nanobits/react-components/*": ["./packages/react-components/src/*"],
      "@nanobits/react-fa-icons": ["./packages/react-fa-icons/src"],
      "@nanobits/react-fa-icons/*": ["./packages/react-fa-icons/src/*"]
    }
  },
  "exclude": ["**/node_modules", "**/dist"]
}